{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "automerge": true,
      "automergeType": "branch"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        ".kts$"
      ],
      "matchStrings": [
        "val ktfmtVersion = \"(?<currentValue>.*)\""
      ],
      "datasourceTemplate": "maven",
      "depNameTemplate": "com.facebook:ktfmt"
    }
  ]
}
