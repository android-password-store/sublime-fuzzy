{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "github>msfjarvis/shared-workflows//renovate/automerge"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "build.gradle.kts$"
      ],
      "matchStrings": [
        "val ktfmtVersion = \"(?<currentValue>.*)\""
      ],
      "datasourceTemplate": "maven",
      "depNameTemplate": "com.facebook:ktfmt"
    }
  ]
}
